const projectsContainerr = document.querySelector('.projects-container');

const projectdots = [
  {
    namee: 'Project 6',
    descriptionn: 'Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi Ut aliquip ex ea commodo consequat. Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi.',
    imagee: 'Images SVG/Project6.svg',
    techh: ['HTML/CSS', 'Ruby On Rails', 'JavaScript'],
    liveLinkk: 'https://juandbta.github.io/Portfolio-project/',
    sourceLinkk: 'https://github.com/JuanDBta/Porfolio-project',
  },
];

for (let i = 0; i < projectdots.length; i++) {
  const projectt = projectdots[i];

  const projectDots = document.createElement('div');
  projectDots.classList.add('menuprojectsmaindots');

  const imageDots = document.createElement('div');
  imageDots.classList.add('backgroundprojectsdots');
  const imagee = document.createElement('img');
  imagee.setAttribute('src', projectt.image);
  imageDots.appendChild(imagee);
  projectDots.appendChild(imageDots);

  const infoDots = document.createElement('div');
  infoDots.setAttribute('id', 'dots');
  const titlee = document.createElement('h3');
  titlee.classList.add('projectstitledots');
  titlee.textContent = projectt.namee;
  infoDots.appendChild(titlee);

  const techListt = document.createElement('ul');
  techListt.classList.add('menulanguagesdots');
  for (let j = 0; j < projectt.tech.length; j++) {
    const tech = projectt.tech[j];
    const techItem = document.createElement('li');
    techItem.classList.add('languagebuttondots');
    techItem.textContent = tech;
    techListt.appendChild(techItem);
  }
  infoDots.appendChild(techListt);

  const buttonn = document.createElement('button');
  buttonn.classList.add('projectbuttondots');
  buttonn.setAttribute('type', 'button');
  buttonn.textContent = 'See this project';
  const icon = document.createElement('img');
  icon.setAttribute('src', 'Images SVG/ic_arrow_right.svg');
  buttonn.appendChild(icon);
  infoDots.appendChild(buttonn);

  projectDots.appendChild(infoDots);
  projectsContainerr.appendChild(projectDots);
}